{
  "name": "steadstack",
  "version": "0.1.0",
  "private": true,
  "description": "Farm and Ranch Management Software (FARMS)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@steadstack/backend",
    "dev:frontend": "npm run dev --workspace=@steadstack/frontend",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "seed": "npm run seed --workspace=@steadstack/backend",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "firebase": "^12.8.0",
    "mongodb": "^7.0.0"
  }
}
